<%= form_with model: @article, local: true, url: moderation_article_path(@article) do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <label>
      <%= form.radio_button :state, :moderation %>
      moderation
    </label>
  </p>
  <p>
    <label>
      <%= form.radio_button :state, :draft %>
      draft
    </label>
  </p>
  <p>
    <label>
      <%= form.radio_button :state, :published %>
      published
    </label>
  </p>


  <p>
    <%= form.label :category_id %><br>
    <%= form.select :category_id, Article::Category.all.collect { |p| [ p.title, p.id ] }, include_blank: true %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
